    <script type="text/javascript">

        function OnSuccess()
        {
            $.validator.unobtrusive.parse(document);
        }
        
        function OnSpace() 
        {
            $('.container, .container *').contents().each(function() {
                if (this.nodeType === 3) { // text node
                    this.textContent = this.textContent.replace(/\u00A0/g, '');
                }
            });
        }
    </script>